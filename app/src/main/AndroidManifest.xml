<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.ultimatelinemanager"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme_Color">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeStart">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SelectTeamActivity"
            android:label="@string/title_activity_select_team"
            android:parentActivityName=".StartActivity"
            android:theme="@style/AppTheme_Color">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ultimatelinemanager.StartActivity"/>
        </activity>
    </application>

</manifest>
