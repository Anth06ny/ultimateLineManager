<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_2"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CreateTeamActivity">


    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5">


        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="@dimen/standard_height"
            android:layout_height="@dimen/standard_height"
            android:adjustViewBounds="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_launcher"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/row_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/font_15"/>

            <TextView
                android:id="@+id/row_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?color_text_third"
                android:textSize="@dimen/font_13"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/row_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_height"
            android:layout_marginLeft="@dimen/margin_5"
            android:adjustViewBounds="true"
            android:background="?material_bt_bg"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_action_delete"/>

    </LinearLayout>


</android.support.v7.widget.CardView>