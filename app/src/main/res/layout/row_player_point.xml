<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_2"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CreateTeamActivity">


    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:paddingTop="@dimen/margin_5">


        <ImageView
            android:id="@+id/rpr_iv_role"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40"
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:scaleType="fitCenter"
            android:src="@drawable/handler"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:id="@+id/rpp_ll_indicator"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rpr_iv_indicator"
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="@dimen/margin_10"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/rpr_tv_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:text="110"
                    android:textColor="?attr/color_text_main"
                    android:textSize="@dimen/font_10"
                    android:textStyle="bold"/>
            </LinearLayout>


            <TextView
                android:id="@+id/rpr_tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toLeftOf="@+id/rpp_ll_indicator"
                android:gravity="center_vertical"
                android:text="Bobator"
                android:textColor="?attr/color_text_main"
                android:textSize="@dimen/font_12"
                android:textStyle="bold"
                android:lines="1"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20"
                android:layout_below="@id/rpr_tv_name"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rpr_iv_run"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:adjustViewBounds="true"
                    android:paddingBottom="@dimen/margin_2"
                    android:paddingTop="@dimen/margin_2"
                    android:src="@drawable/ic_run"/>

                <TextView
                    android:id="@+id/rpr_tv_run"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="18min"
                    android:textColor="?color_text_third"
                    android:textSize="@dimen/font_10"/>

                <ImageView
                    android:id="@+id/rpr_iv_sleep"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:adjustViewBounds="true"
                    android:paddingBottom="@dimen/margin_2"
                    android:paddingTop="@dimen/margin_2"
                    android:src="@drawable/ic_sleep"/>

                <TextView
                    android:id="@+id/rpr_tv_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="5min"
                    android:textColor="?color_text_third"
                    android:textSize="@dimen/font_10"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>