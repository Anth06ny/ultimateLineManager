<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lp_ll_point_live"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lp_ll_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_height"
        android:background="@color/dark_cyan"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="France 3 -  2 Espagne"
            android:textColor="@color/white"
            android:textSize="@dimen/font_13"/>

        <Chronometer
            android:id="@+id/lp_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/white"
            android:textSize="@dimen/font_13"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center"
            android:text="/"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"/>

        <Chronometer
            android:id="@+id/lp_match_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center_vertical|right"
            android:textColor="@color/white"
            android:textSize="@dimen/font_13"/>

        <ImageView
            android:id="@+id/lp_bt_open"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="?ripple_background_rounded"
            android:gravity="center"
            android:padding="@dimen/margin_15"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lp_ll_extension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_cyan_light"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/lp_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_height"

            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/lp_bt_offense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/lp_offense"
                android:textAllCaps="false"
                android:textColor="?attr/color_text_main"
                android:textSize="@dimen/font_14"/>

            <Button
                android:id="@+id/lp_bt_defense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/lp_defense"
                android:textAllCaps="false"
                android:textColor="?attr/color_text_main"
                android:textSize="@dimen/font_14"/>


            <ImageView
                android:id="@+id/lp_iv_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                android:src="@drawable/play"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30"
            android:animateLayoutChanges="true"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_10"
            >

            <TextView
                android:id="@+id/lp_tv_previous_point"
                style="@style/button_textview_material_design"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="@string/lp_bt_previous_point"
                android:textColor="?attr/material_bt_text_color_white"/>

            <TextView
                android:id="@+id/lp_tv_manage_player"
                style="@style/button_textview_material_design"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="@string/lp_manage_players"
                android:textColor="?attr/material_bt_text_color_white"/>

            <TextView
                android:id="@+id/lp_tv_next_point"
                style="@style/button_textview_material_design"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="@string/lp_bt_next_point"
                android:textColor="?attr/material_bt_text_color_white"
                />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>