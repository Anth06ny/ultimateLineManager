<?xml version="1.0" encoding="utf-8"?>
<resources
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">?color_header</item>
        <item name="colorPrimaryDark">?color_menu</item>
        <item name="colorAccent">?color_composant_main</item>
        <item name="colorControlNormal">?color_composant_main</item>
        <item name="colorControlActivated">?color_composant_main_highlighted</item>
        <item name="colorControlHighlight">?color_composant_main_highlighted</item>

    </style>

    <style name="AppThemeStart" parent="AppTheme_Color">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Action Bar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?attr/color_menu</item>
        <item name="background">?attr/color_menu</item>
        <item name="titleTextStyle">@style/TitleBarTextColor</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="AppTheme">
        <item name="ripple_background_rounded">?android:attr/selectableItemBackground</item>
        <item name="material_bt_text_color">?text_second_selected</item>
        <item name="material_bt_bg">@null</item>
        <item name="material_bt_text_color_white">?text_white_second_selected</item>
    </style>

    <!-- ############################-->
    <!--        Theme               -->
    <!-- ############################-->
    <!-- Base application theme. -->
    <style name="AppTheme_Color" parent="MaterialTheme">

        <!-- ############################-->
        <!--        Drawable               -->
        <!-- ############################-->
        <item name="text_second_selected">@drawable/blue_text_second_selected</item>
        <item name="text_white_second_selected">@drawable/blue_text_white_second_selected</item>

        <!-- ****************** -->
        <!--     Color          -->
        <!-- ****************** -->
        <item name="color_application_bg">@color/very_light_gray</item>

        <!-- Couleur principale des composant -->
        <item name="color_composant_main">@color/vivid_blue</item>
        <item name="color_composant_main_highlighted">@color/vivid_cyan</item>
        <item name="color_composant_main_text">@color/white</item>

        <!-- menu -->
        <item name="color_menu">@color/dark_cyan</item>
        <item name="color_menu_text">@color/white</item>
        <item name="color_menu_text_highlighted">@color/vivid_blue</item>
        <item name="color_menu_separator">@color/dark_cyan_light</item>

        <!-- text -->
        <item name="color_text_main">@color/very_dark_desaturated_cyan</item>
        <item name="color_text_second">@color/vivid_blue</item>
        <item name="color_text_third">@color/mostly_desaturated_dark_blue</item>

        <item name="color_disable">@color/dark_gray</item>

        <!-- List -->
        <item name="color_list_row_bg">@color/white</item>
        <item name="color_list_row_bg_highlighted">@color/light_grayish_blue</item>

        <!-- Ripple color -->
        <item name="color_ripple_color">@color/mostly_desaturated_dark_blue</item>

        <!-- ****************** -->
        <!-- Pop up color    -->
        <!-- ****************** -->
        <item name="color_popup_error_text">@color/bright_orange</item>


        <!-- ****************** -->
        <!--   Main fragment    -->
        <!-- ****************** -->
        <!-- La barre de titre -->
        <item name="color_header">@color/strong_blue</item>
        <item name="color_header_text">@color/white</item>

        <item name="color_mf_device_connecte_color">@color/pure_cyan</item>
        <item name="color_mf_device_noninitialise_color">@color/vivid_orange</item>
        <item name="color_mf_device_deconnecte_color">@color/very_dark_grayish_blue</item>

        <item name="color_mf_posmate_more_bg">@color/dark_cyan</item>

        <item name="color_mf_error_bg">@color/red</item>


        <!-- ****************** -->
        <!--   Paiement fragment    -->
        <!-- ****************** -->
        <!-- clavier -->
        <item name="color_clavier_bg">@color/very_light_gray2</item>
        <item name="color_clavier_text">@color/dark_grayish_blue</item>
        <item name="color_clavier_separation">@color/very_light_gray3</item>

        <!-- ****************** -->
        <!--   Gestion Boitier    -->
        <!-- ****************** -->
        <item name="color_gb_boitier_row_bg">@color/white</item>
        <item name="color_gb_boitier_row_selected_bg">@color/light_grayish_blue</item>

        <!-- ****************** -->
        <!--  LOGIN    -->
        <!-- ****************** -->
        <item name="color_login_et_separator">@color/grayish_cyan</item>


    </style>

    <!--<style name="LauncherTheme_blue" parent="AppTheme_Blue">-->
    <!--<item name="android:windowBackground">@drawable/splashscreen_blue</item>-->
    <!--</style>-->


</resources>